<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Search key settings -->
	<PreferenceCategory android:key="input_menu_settings"
		android:title="@string/general_title">

		<CheckBoxPreference android:key="pref_long_press_menu_as_soft"
            android:title="@string/pref_long_press_menu_soft_title"
            android:summary="@string/pref_long_press_menu_soft_summary" />

		<CheckBoxPreference android:key="pref_long_press_menu_as_search"
			android:title="@string/pref_long_press_menu_as_search_title"
			android:summary="@string/pref_long_press_menu_as_search_summary" />

		<CheckBoxPreference android:key="pref_long_press_menu"
			android:title="@string/pref_long_press_menu_title"
			android:summary="@string/pref_long_press_menu_summary" />

		<Preference android:key="pref_user_defined_long_press_menu"
			android:dependency="pref_long_press_menu"
			android:title="@string/pref_user_defined_long_press_menu_title" />

	</PreferenceCategory>

</PreferenceScreen>
